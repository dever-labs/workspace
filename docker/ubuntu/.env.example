# Development Container Configuration
# Copy this file to .env and customize for your environment

# User credentials (CHANGE THESE!)
DEV_PASSWORD=dev

# User ID mapping (optional - match your host user for proper file permissions)
# USER_UID=1000
# USER_GID=1000

# Timezone
TIMEZONE=America/New_York

# Git configuration (optional)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# Remote Access Options
# Choose your preferred remote access method based on use case:
#
# RDP (xrdp) - Default, Windows native client, moderate latency (50-150ms)
ENABLE_RDP=true
#
# X2Go - Better performance (10-30ms), requires X2Go client
ENABLE_X2GO=false
#
# SSH - Required for X2Go, useful for terminal access
ENABLE_SSH=true
#
# Sunshine/Moonlight - BEST performance (5-15ms, 60 FPS), GPU-accelerated streaming
#   Sunshine runs IN the container, captures the desktop, streams to Moonlight client
#   GPU encoding for ultra-low latency
ENABLE_SUNSHINE=true
#   Optionally disable RDP to save resources when using Sunshine:
#   ENABLE_RDP=false

# Port mapping (change if ports are in use)
RDP_PORT=3389
SSH_PORT=2222

# Resource limits
CPU_LIMIT=8
MEMORY_LIMIT=16G
CPU_RESERVATION=4
MEMORY_RESERVATION=8G

# NVIDIA GPU support
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=all
